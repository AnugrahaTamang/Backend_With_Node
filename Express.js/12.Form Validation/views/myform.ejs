<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My form</title>
  </head>
  <body>
    <h1>Form Validation</h1>
    <% if(errors.length>0) { %>
    <ul>
      <% errors.forEach(err => { %>
      <li><%= err.msg %></li>
      <% }); %>
    </ul>
    <%}%>
    <form action="/saveform" method="post">
      <div>
        <label for="name"
          >User Name:
          <input type="text" name="username" id="name" />
        </label>
      </div>
      <br />
      <div>
        <label for="email"
          >Email:
          <input type="email" name="useremail" id="email" />
        </label>
      </div>
      <br />
      <div>
        <label for="password"
          >Password:
          <input type="password" id="password" name="userpass" />
        </label>
      </div>
      <br />
      <div>
        <label for="age"
          >Age:
          <input type="number" id="age" name="userage" />
        </label>
      </div>
      <br />
      <div>
        <label for="city"
          >City:
          <div>
            <select name="usercity" id="city">
              <option value="Delhi">Delhi</option>
              <option value="Mumbai">Mumbai</option>
              <option value="Goa">Goa</option>
              <option value="Agra">Agra</option>
            </select>
          </div>
        </label>
      </div>
      <br />
      <div>
        <input type="submit" value="submit" />
      </div>
    </form>
  </body>
</html>
